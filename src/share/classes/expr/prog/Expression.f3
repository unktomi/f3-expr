function observeType from (t is F3Type) to F3Type {
    if (Reflect.OBSERVABLE_TYPE.isAssignableFrom(t)) { 
        const classType = t as F3ClassType;
        const targs = classType.getTypeArguments();
        if (targs.length > 0) {
            return targs[0];
        }
    }
    return t;
}


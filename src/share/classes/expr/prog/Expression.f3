    const onDown1 = observeMouseDown().subscribe(function from (e is MouseEvent) to () {
            dx = 0; dy = 0;
            if (false and links.size() == 1) {
                link0 = links[0];
                tmpLink = InputView {
                    canvas: canvas;
                }
                tmpLink.pos = canvas.toLocal * e.sceneLocation;
                insert tmpLink into canvas.views;
                link0.target = tmpLink;
                link0.link();

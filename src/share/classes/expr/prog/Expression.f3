        for (i in inputs) {
            if (i.links.size() > 0) {
                for (link in i.links) {
                    const lnk = canvas.getLink(link);
                    lnk.target = result.inputViews[indexof i];
                }
            }
        }
        insert result into canvas.views;
        return result;
    }

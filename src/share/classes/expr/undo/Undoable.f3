package expr.undo;
import f3.lang.Ref;

public class Undoable of a 
{
    public var target is Ref of a;
    public var value is a;
    public function apply
    {
	target.set(value);
    }
}

public function make of a from (ptr is Ref of a) to Undoable of a 
{
    Undoable of a {
	target: ptr;
	value: ptr.get();
    }
}



             content: bind 
foreach (cam in model.getCameras()) if (cam.id == "perspShape" or cam.id == "topShape" or cam.id == "sideShape" or cam.id == "frontShape") then null else CameraAsset { 
		url: "{url}#{cam.id}";
		name: cam.id; 

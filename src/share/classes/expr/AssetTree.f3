public function makeAsset from (r is ResourceNode) to Asset {
    if (r is MaResourceNode) {
	MaAsset {
	    model: (r as MaResourceNode).model;
            temporalRoot: r.temporal;
	}
    } else if (not (r is GroupResourceNode)) {
        ResourceNodeAsset {
            rn: r;
        }
    } else null
}

